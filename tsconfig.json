{
  "compilerOptions": {
    "target": "ESNext",                   
    "module": "CommonJS",                 
    "rootDir": "./src",                   
    "outDir": "./dist",                   
    "strict": true,                       
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
  },
  "include": ["src"],                     
  "exclude": ["node_modules", "dist"]     
}
